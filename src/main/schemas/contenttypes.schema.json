{
  "$schema": "http://json-schema.org/schema#",
  "$id": "http://isdcf.com/ns/json-schemas/registries/contenttypes/1.0.0-beta.1",
  "$comment": "Copyright, ISDCF <info@isdcf.com>",
  "title": "Schema for the Content Types Registry of the ISDCF",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "dcncCode": {
        "$ref": "#/definitions/dcncCode"
      },
      "dcncSortOrder": {
        "type": "integer",
        "minimum": 1
      },
      "cplContentKind": {
        "$ref": "#/definitions/cplContentKind"
      },
      "description": {
        "type": "string"
      }
    },
    "required": [ "dcncCode", "dcncSortOrder", "cplContentKind", "description" ],
    "additionalProperties": false
  },
  "definitions": {
    "dcncCode" : {
        "type": "string",
        "pattern": "^[A-Z0-9]{2,4}$"
    },
    "cplContentKind": {
      "type": "object",
      "properties": {
          "value": {
              "type": "string"
          },
          "scope": {
              "type": "string",
              "format": "uri"
          },
          "definingDocs": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "url": {
                  "type": "string",
                  "format": "uri"
                }
              }
            }
          }
      },
      "required": [ "value", "scope", "definingDocs"]
    }
  }
}
