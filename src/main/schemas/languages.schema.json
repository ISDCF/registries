{
  "$schema": "http://json-schema.org/schema#",
  "$id": "http://isdcf.com/ns/json-schemas/registries/languages/1.0.0-beta.2",
  "$comment": "Copyright, ISDCF <info@isdcf.com>",
  "title": "Schema for the Languages Registry of the ISDCF",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "comments": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "dcncTag": {
        "type": "string"
      },
      "language": {
        "type": "string"
      },
      "rfc5646Tag": {
        "type": "string"
      },
      "use": {
        "type": "array",
        "minItems": 1,
        "uniqueItems": true,
        "items": {
          "type": "string",
          "enum": ["audio", "text"]
        }
      }
    },
    "required": [
      "rfc5646Tag",
      "use"
    ],
    "additionalProperties": false
  }
}
