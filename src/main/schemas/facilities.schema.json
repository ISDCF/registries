{
  "$schema": "http://json-schema.org/schema#",
  "$id": "http://isdcf.com/ns/json-schemas/registries/facilities/1.0.0-beta.1",
  "$comment": "Copyright, ISDCF <info@isdcf.com>",
  "title": "Schema for the Facilities registry of the ISDCF",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "code": {
        "type": "string",
        "pattern": "^[A-Z0-9]{2,}$"
      },
      "description": {
        "type": "string"
      },
      "comments": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    },
    "required": [
      "code",
      "description"
    ],
    "additionalProperties": false
  }
}